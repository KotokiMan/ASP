
@model IEnumerable<UserList>
@{
    ViewData["Title"] = "Список пользователей";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
           <h2 class="text-primary">Список пользователей</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Client" asp-action="Create" class="btn btn-outline-primary float-right">
                <i class="bi bi-person-plus"></i> &nbsp; Добавить пользователя </a>
        </div>
    </div>        
</div>
<br /> <br />
 
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>LastName</th>
            <th>IIN</th>
            <th>Address</th>
            <th>DateOfBirth</th>
            <th>Country</th>
            <th>City</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.LastName</td>
                <td>@item.IIN</td>
                <td>@item.Address</td>
                <td>@item.DateOfBirth.ToString("D")</td>
                <td>@item.Country</td>
                <td>@item.City</td>
            </tr>
        }
    </tbody>
</table>



                
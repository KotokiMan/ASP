@model DtoOperation

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Снятие</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="NumberAccountRecepient">Мой счёт</label>
            <input class="form-control" asp-for="@Model.NumberAccountRecepient" readonly></>
            <span asp-validation-for="NumberAccountSending" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MyBalance">Balance</label>
            <span id="num2" asp-validation-for="MyBalance" class="text-danger">@Model.MyBalance</span>
        </div>
        <div class="mb-3">
            <label asp-for="TransferSum">Сумма снятия</label>
            <input id="num1" class="form-control" asp-for="TransferSum" />
            <span asp-validation-for="TransferSum" class="text-danger"></span>
        </div>


        <button class="btn btn-primary" type="submit">Подтвердить снятие</button>
        <a asp-controller="User" asp-action="Cabinet" class="btn btn-secondary" role="button">Back</a>
    </div>

</form>
